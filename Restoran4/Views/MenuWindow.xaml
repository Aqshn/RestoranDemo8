    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*" />
            <ColumnDefinition Width="1.5*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="5*" />
        </Grid.RowDefinitions>
        <TextBlock Background="Firebrick" Grid.Row="0" FontSize="30" Text="Menu:"/>
        <ListView Grid.Row="15" x:Name="leftListView" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Serin Ickiler:" FontSize="30"/>
                        <Button Content="Ayran     11.2 azn" FontSize="30"/>
                        <Button Content="Pive      12 azn" FontSize="30"/>
                        <TextBlock Text="Isti ickiler:" FontSize="30"/>
                        <Button Content="Kofe     7.4 azn" FontSize="30"/>
                        <TextBlock Text="Qelyanaltilar:" FontSize="30"/>
                        <Button Content="Dolma     11.2 azn" FontSize="30"/>
                        <TextBlock Text="Sorbalar:" FontSize="30"/>
                        <Button Content="Merci     11.2 azn" FontSize="30"/>
                        <Button Content="Dovga      12 azn" FontSize="30"/>                
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <TextBlock Grid.Column="1" Grid.Row="0" FontSize="30" Text="   Name       Price       Count"/>
        <ListView Grid.Column="1" Grid.Row="5" x:Name="rightListView" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="{Binding Name}" Margin="0,0,10,0" />
                        <TextBlock Text="{Binding Price, StringFormat='{}{0:C}'}" />  

                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>
    </Grid>
